<div id="<%= dom_id job %>">
  <p class="my-5">
    <strong class="block mb-1 font-medium">Title:</strong>
    <%= job.title %>
  </p>

  <p class="my-5">
    <strong class="block mb-1 font-medium">Commitment:</strong>
    <%= job.commitment.humanize %>
  </p>

  <p class="my-5">
    <strong class="block mb-1 font-medium">Description:</strong>
    <%= job.description %>
  </p>

  <div class="grid grid-cols-3 gap-4 my-5">
    <div>
      <strong class="block mb-1 font-medium">Category:</strong>
      <%= job.category %>
    </div>

    <div>
      <strong class="block mb-1 font-medium">Location:</strong>
      <%= job.location %>
    </div>

    <div>
      <strong class="block mb-1 font-medium">Remote:</strong>
      <%= job.remote ? 'Yes' : 'No' %>
    </div>
  </div>
  <hr class="mt-6">

</div>
